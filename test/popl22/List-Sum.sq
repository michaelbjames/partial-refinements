type Nat = {Int | _v >= 0}

data List a where
	Nil :: List a
	Cons :: x: a -> xs: List a -> List a

termination measure len :: List a -> {Int | _v >= 0} where
  Nil -> 0
  Cons x xs -> 1 + len xs

plus :: x:Int -> y:Int -> {Int | _v == (x+y)}

qualifier { len _v < len x, len _v >= 0 }

sum :: (xs: List Int -> Int) ^
	   (xs: List {Int| _v == 3} -> {Int | _v == (3 * len xs)})
sum = \xs.
	match xs with
		Nil -> 0
		Cons y ys -> plus y (sum ys)


